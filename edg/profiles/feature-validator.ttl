    ]
.

:Requirement-F-fsource
	a sh:NodeShape ;
	sh:targetClass geo:Feature ;
    sh:message "Requirement F-fsource: Each FSDF Feature _MUST_ have a Feature source property indicated with a `core:featureSource` predicate"@en ;
    sh:property [
        sh:path core:featureSource ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ]
.

:Requirement-F-fdate
	a sh:NodeShape ;
	sh:targetClass geo:Feature ;
    sh:message "Requirement F-fdate: Each FSDF Feature _MUST_ have a Feature date property indicated with `core:featureDate` predicate pointing to either an `xsd:date`, `xsd:dateTime` or `xsd:dateTimeStamp` literal value"@en ;
    sh:property [
        sh:path core:featureDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or (
            [
                sh:datatype xsd:dateTime ;
            ]
            [
                sh:datatype xsd:date ;
            ]
            [
                sh:datatype xsd:dateTimeStamp ;
            ]
        ) ;
    ]
.

